<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pcduino.MainActivity" >

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="9" >

        <Button
            android:id="@+id/playLed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="playLed"
            android:text="Led" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="5"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="clear"
            android:text="Clear"
            android:textColor="#0000FF" />

        <Button
            android:id="@+id/setEmer"
            android:layout_column="6"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="setEmer"
            android:text="EMER"
            android:textColor="#ff0000" />

        <Button
            android:id="@+id/Connect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:layout_weight="0.5"
            android:onClick="Connect"
            android:text="Con" />

        <Button
            android:id="@+id/disConnect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="7"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:layout_weight="0.5"
            android:onClick="disConnect"
            android:text="disCon" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:onClick="trim"
            android:text="Trim" />
    </GridLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/takeOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:onClick="takeOff"
            android:text="T_Off" />

        <Button
            android:id="@+id/Land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Land"
            android:text="Land" />

        <ToggleButton
            android:id="@+id/OnOffData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnOffData"
            android:text="ToggleButton" />


        <Button
            android:id="@+id/hover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="hover"
            android:text="Hover" />

        <Button
            android:id="@+id/Mis1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Mis1"
            android:text="Mis1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="397dp"
        android:layout_height="wrap_content" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="175dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="196dp"
                android:layout_height="193dp"
                android:orientation="vertical" >

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="17" >

                    <TextView
                        android:id="@+id/sensor1Text"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left|top"
                        android:layout_row="0"
                        android:layout_weight="0.04"
                        android:text="Sen1:   "
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/Distance1"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_column="15"
                        android:layout_gravity="left|top"
                        android:layout_row="0"
                        android:layout_weight="0.59"
                        android:text="NULL"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="18" >

                    <TextView
                        android:id="@+id/sensor2Text"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left|top"
                        android:layout_row="0"
                        android:layout_weight="0.04"
                        android:text="Sen2:   "
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_column="16"
                        android:layout_gravity="left|top"
                        android:layout_row="0"
                        android:layout_weight="0.59"
                        android:text="NULL"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="18" >

                    <TextView
                        android:id="@+id/sensor3Text"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left|top"
                        android:layout_row="0"
                        android:layout_weight="0.04"
                        android:text="Sen3:   "
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/TextView07"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="left|top"
                        android:layout_row="0"
                        android:layout_weight="0.59"
                        android:text="NULL"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="12" >

                    <TextView
                        android:id="@+id/rollText"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left|center_vertical"
                        android:layout_row="0"
                        android:text="roll:       "
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/roll"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="left|center_vertical"
                        android:layout_row="0"
                        android:layout_weight="0.01"
                        android:onClick="roll"
                        android:text="NULL"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="12" >

                    <TextView
                        android:id="@+id/YawText"
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left|center_vertical"
                        android:layout_row="1"
                        android:text="Yaw:      "
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/Yaw"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_gravity="left|center_vertical"
                        android:layout_row="1"
                        android:layout_weight="0.73"
                        android:onClick="Yaw"
                        android:text="NULL"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="15" >

                    <TextView
                        android:id="@+id/Textpitch"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left|center_vertical"
                        android:layout_row="0"
                        android:text="pitch:    "
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/pitch"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_column="8"
                        android:layout_gravity="left|top"
                        android:layout_row="0"
                        android:layout_weight="0.73"
                        android:onClick="pitch"
                        android:text="NULL"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="16" >

                    <TextView
                        android:id="@+id/BatText"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left|center_vertical"
                        android:layout_row="0"
                        android:text="Battery: "
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/Battery"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_column="14"
                        android:layout_gravity="left|top"
                        android:layout_row="0"
                        android:layout_weight="0.73"
                        android:onClick="Battery"
                        android:text="NULL"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="16" >

                    <TextView
                        android:id="@+id/FlyingStateText"
                        android:layout_width="91dp"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_gravity="left|center_vertical"
                        android:layout_row="0"
                        android:text="FlyState: "
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/FlyingState"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_column="14"
                        android:layout_gravity="left|top"
                        android:layout_row="0"
                        android:layout_weight="0.73"
                        android:onClick="flyingState"
                        android:text="NULL"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </GridLayout>
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/rect"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:orientation="vertical" >

            
        </LinearLayout>

    </LinearLayout>

</LinearLayout>